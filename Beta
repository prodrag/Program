<body>
  <h1>Program Beta Encrypt</h1>
  <textarea id="inputText" placeholder="Masukkan teks yang akan diencrypt..."></textarea>
  <br>
  <button onclick="encryptText()">Encrypt</button>
  <button onclick="decryptText()">Decrypt</button>
  <textarea id="outputText" placeholder="Hasil akan muncul di sini..." readonly></textarea>

  <script>
    function encryptText() {
      let text = document.getElementById('inputText').value;
      let encrypted = btoa(text); // Simple Base64
      document.getElementById('outputText').value = encrypted;
    }

    function decryptText() {
      let text = document.getElementById('inputText').value;
      try {
        let decrypted = atob(text); // Simple Base64 decode
        document.getElementById('outputText').value = decrypted;
      } catch (e) {
        alert('Input tidak valid untuk dekripsi!');
      }
    }
  </script>
</body>
